<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativelayout_order"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_item_num">



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_orderid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_normal" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_orderstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/icon_blue"
            android:textSize="@dimen/font_normal" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_ordertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_orderid"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_orderprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_orderstate"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_normal" />


    </RelativeLayout>





    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/relativelayout_order"
        android:layout_gravity="left"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativelayout_service"
        android:layout_below="@id/tv_item_address"
        android:layout_alignParentLeft="true"
        android:layout_gravity="left"
        android:padding="5dp"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_servicename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_normal" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_servicetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_servicename"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_serviceprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_servicename"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />


    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_serviceman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/relativelayout_service"
        android:layout_gravity="left"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_serviceelder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_item_serviceman"
        android:layout_gravity="left"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_item_serviceelder"
        android:layout_gravity="left"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_creattime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_item_des"
        android:layout_gravity="left"
        android:padding="5dp"
        android:textColor="@color/icon_gray"
        android:textSize="@dimen/font_small" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_consumingtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_item_des"
        android:layout_gravity="left"
        android:padding="5dp"
        android:textColor="@color/icon_gray"
        android:textSize="@dimen/font_small" />

</RelativeLayout>