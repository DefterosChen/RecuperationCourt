    <LinearLayout
        android:id="@+id/rb_title"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@color/icon_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/stv_info"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_title"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/icon_kky_stepnum"
            android:tint="@color/white"/>

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kky_device_watch_stepnum"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/font_small" />

    </LinearLayout>

    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/stv_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rb_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sLeftBottomTextColor="@color/icon_blue"
        app:sLeftBottomTextSize="@dimen/font_super_small"
        app:sLeftBottomTextString="@string/kky_device_watch_locatetime"
        app:sLeftTextColor="@color/icon_blue"
        app:sLeftTextIsBold="true"
        app:sLeftTextSize="@dimen/font_normal"
        app:sLeftTextString="@string/kky_device_watch_nodata"
        app:sLeftViewGravity="left_center"
        app:sRightIconHeight="20dp"
        app:sRightIconRes="@drawable/icon_arrow_right_grey"
        app:sRightIconWidth="20dp"
        app:sRightTextSize="@dimen/font_small"
        app:sRightTextString="@string/kky_device_watch_viewinfo" />

</androidx.constraintlayout.widget.ConstraintLayout>